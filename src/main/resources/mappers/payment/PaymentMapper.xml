<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanhwa_tae.gulhan.payment.query.mapper.PaymentMapper">
    <select id="findOrderByUserNo" resultType="com.hanhwa_tae.gulhan.cart.command.domain.aggregate.Order">

        SELECT
        order_id
        from `order`
        where user_no = #{ user_no }
        order by ordered_at DESC
        LIMIT 1

    </select>
</mapper>